app_path() {
    [ -z "$1" ] && return -1
    APP_PATH="$HIREIQ_ROOT/py/toomah/djangoapps/$1"
    if [ ! -d "$APP_PATH" ]; then
        echo "No app named $1"
        return -1
    fi
}

# cd, but better
gt() {
    app_path $1 && cd $APP_PATH
}

# Open app in textmate
edit() {
    app_path $1 && mate $APP_PATH
}